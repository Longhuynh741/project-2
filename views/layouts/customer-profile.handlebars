<html lang="en">

<head>
    <title>Customer Services Page</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css"
        integrity="sha256-ogmFxjqiTMnZhxCqVmcqTvjfe1Y/ec4WaRj/aQPvn+I=" crossorigin="anonymous">
    <link href="/assets/css/customer-services.css" rel="stylesheet">
</head>

<body>
<div class="top-bar" id="example-menu">
  <div class="top-bar-left">
    <ul class="dropdown menu">
      <li class="menu-text site-title-font" id="navbar-title">Cultural Bash</li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <li><a href="/customer-create-event">Create an Event</a></li>
      <li><a href="/customer">Profile</a></li>
      <li><a href="/customer-login"><button id="myBtn">Login</button></a></li>
    </ul>
  </div>
</div>


    <div class="holy-grail-grid">
        <div class="holy-grail-header">
            <h3>Profile Page</h3>
        </div>

        <div class="holy-grail-left">
            <h3>Past Events</h3>
            <ul>
                <li><a href="#">Event 1 ID/Name Here</a></li>
                <li><a href="#">Event 2 ID/Name Here</a></li>
                <li><a href="#">Event 3 ID/Name Here</a></li>
            </ul>
        </div>

        <div class="holy-grail-middle">
            <div class="card-user-container">
                <div class="card-user-avatar">
                    <img src="https://placehold.it/200x200" alt="" class="user-image">
                </div>
                <div class="card-user-bio">
                    <h4>Full Name</h4>
                    <p>Email Here</p>
                    <span class="location"><span class="location-icon fa fa-map-marker"></span><span
                            class="location-text">City and State Here</span></span>
                </div>
            </div>
            <div class="card-user-container text-center" id="upcoming-events">
                <h3> My Upcoming Events</h3>
                <table>
                    {{#each newEvent}}
                    <tr>
                        <th>{{eventName}}</th>
                        <th>{{eventDate}}</th>
                        <th>{{startTime}}</th>
                        <th>{{endTime}}</th>
                        <th>{{address}}</th>
                        <th>{{city}}</th>
                        <th>{{state}}</th>
                        <th>{{zipcode}}</th>
                    </tr>
                    {{/each}}
                </table>
        </div>
    </div>

<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
    <script type="text/javascript" src="/assets/js/customer-profile.js"></script>

</body>

</html>


